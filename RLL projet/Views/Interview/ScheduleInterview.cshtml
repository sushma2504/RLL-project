@model Interview

@{
    ViewBag.Title = "Schedule Interview";
}

<h2>Schedule Interview</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.CandidateName)
        @Html.TextBoxFor(model => model.CandidateName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.InterviewDate)
        @Html.TextBoxFor(model => model.InterviewDate, new { @class = "form-control", type = "datetime-local" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Interviewer)
        @Html.TextBoxFor(model => model.Interviewer, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Schedule Interview</button>
}