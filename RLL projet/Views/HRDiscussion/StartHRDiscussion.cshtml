@model HRDiscussion

@{
    ViewBag.Title = "Start HR Discussion";
}

<h2>HR Discussion</h2>

@using (Html.BeginForm())
{
    <div class="form-group">
        @Html.LabelFor(model => model.CandidateName)
        @Html.TextBoxFor(model => model.CandidateName, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Interviewer)
        @Html.TextBoxFor(model => model.Interviewer, new { @class = "form-control" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.InterviewDate)
        @Html.TextBoxFor(model => model.InterviewDate, new { @class = "form-control", type = "date" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.CommunicationSkillsRating)
        @Html.TextBoxFor(model => model.CommunicationSkillsRating, new { @class = "form-control", type = "number", min = "1", max = "5" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.TechnicalSkillsRating)
        @Html.TextBoxFor(model => model.TechnicalSkillsRating, new { @class = "form-control", type = "number", min = "1", max = "5" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.ProblemSolvingRating)
        @Html.TextBoxFor(model => model.ProblemSolvingRating, new { @class = "form-control", type = "number", min = "1", max = "5" })
    </div>

    <div class="form-group">
        @Html.LabelFor(model => model.Comments)
        @Html.TextAreaFor(model => model.Comments, new { @class = "form-control" })
    </div>

    <button type="submit" class="btn btn-primary">Submit HR Discussion</button>
}
